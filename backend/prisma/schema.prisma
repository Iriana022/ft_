generator client{
	provider = "prisma-client-js"
}

datasource db{
	provider = "postgresql"
	url	 = env("DATABASE_URL")
}

model User {
	id	Int	@id @default(autoincrement())
	fortyTwoId Int  @unique
	login	String	@unique
	email	String	@unique
	avatar	String?
	createdAt DateTime @default(now())
	matches Match[]
}

model Match {
	id	Int	@id @default(autoincrement())
	scoreA Int
	scoreB	Int
	winner User	@relation(fields: [winnerId], references: [id])
	winnerId Int
}